<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
    <p>We've sent a confirmation email to <strong><%= @order.email %></strong></p>
    <p>Here's a summary of your order:</p>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Quantity</th>
          <th>Price</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% @order.line_items.each do |item| %> 
          <tr>
            <td>
              <%= image_tag item.product.image.tiny.url %>
            </td>
            <td>
              <h4><%= item.product.name %></h4>
              <br>
              <p><%= item.product.description %></p>
            </td>
            <td>
              <%= item.quantity %>
            </td>
            <td>
              <%= humanized_money_with_symbol item.product.price %>
            </td>
            <td>
              <%= humanized_money_with_symbol item.product.price * item.quantity %>
            </td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">Total</th>
          <td><%= number_to_currency @order.total %></td>
        </tr>
      </tfoot>
    </table> 
  </div>

  <a href="<%= root_path %>" class="btn btn-lg btn-success">
          Continue Shopping
        </a>

</section>
